<% include ../partials/header %>

<div class='container keys-section'>
    <div class='row'>
        <h1 style='text-align: center'>Edit <%= key.name %></h1>
        <div style='width: 40%;margin: 20px auto'>
            <form action="/keys/<%=key._id %>?_method=PUT" method="POST">
                <div class='form-group'>
                    <h3>Title</h3>
                    <input class='form-control' type="text" name='key[title]' value='<%= key.title %>'>
                </div>
                
                <div class='form-group'>
                    <h3>Description</h3>                        
                    <textarea class='form-control' type="text" name='key[description]' value='<%= key.description %>'></textarea>
                </div>

                <div class='form-group'>
                    <h3>Source</h3>                        
                    <input class='form-control' type="text" name='key[sourceAuthor]' value='<%= key.sourceAuthor %>'>
                </div>

                <div class='form-group'>
                    <h3>Link</h3>                        
                    <input class='form-control' type="text" name='key[link]' value='<%= key.link %>'>
                </div>

                <div class='form-group'>
                    <h3>Contributor</h3>                        
                    <input class='form-control' type="text" name='key[contributor]' value='<%= key.contributor %>'>
                </div>
                <div class='form-group'>
                    <h3>Tags</h3>                        
                    <input class='form-control' type="text" name='key[tags]' value='<%= key.tags %>'>
                </div>
                
                <div class='form-group'>
                    <button class='btn btn-md btn-primary btn-block'>Submit</button>
                </div>

            </form>
        <a href='/keys' style="background:black;padding: 10px"><i class="fa fa-chevron-left" aria-hidden="true"></i>
            Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>