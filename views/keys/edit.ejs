<% include ../partials/header %>

<div class='container'>
    <div class='row'>
        <h1 style='text-align: center'>Edit <%= key.name %></h1>
        <div style='width: 40%;margin: 20px auto'>
            <form action="/keys/<%=key._id %>?_method=PUT" method="POST">
                <div class='form-group'>
                    <input class='form-control' type="text" name='key[title]' value='<%= key.title %>'>
                </div>
                
                <div class='form-group'>
                    <input class='form-control' type="text" name='key[description]' value='<%= key.description %>'>
                </div>
                
                <div class='form-group'>
                    <button class='btn btn-lg btn-primary btn-block'>Submit!</button>
                </div>
            </form>
        <a href='/keys'>Go back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>